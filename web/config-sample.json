{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=ITServicesAppDb;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Redis": {
    "Enabled": true,
    "ConnectionString": "localhost:6379,abortConnect=false",
    "Database": 0,
    "KeyPrefix": "itservice:"
  },
  "Stripe": {
    "SecretKey": "sk_test_...",
    "PublishableKey": "pk_test_...",
    "WebhookSecret": "whsec_..."
  },
  "Smtp": {
    "Host": "smtp.yourprovider.com",
    "Port": 587,
    "UseSsl": true,
    "User": "no-reply@yourdomain.com",
    "Password": "CHANGE_ME",
    "From": "IT Services <no-reply@yourdomain.com>"
  },
  "Jwt": {
    "Issuer": "your-issuer",
    "Audience": "itservices.web",
    "Key": "SVRu0YftB5aIQ6K_mjvqgQ-bW5pmQ0-n4JjQtb0VfFM=", // e.g., "pJb7n3...==" (32 random bytes as Base64)
    "KeyId": "key-2025-08-22",
    "ExpiryMinutes": 60,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ClockSkewSeconds": 30
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Enrichers.Environment", "Serilog.Enrichers.Process", "Serilog.Enrichers.Thread" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "shared": true
        }
      }
      /* Optional Seq sink:
      ,{
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
      */
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
